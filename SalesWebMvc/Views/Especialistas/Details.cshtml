@model SalesWebMvc.Models.Especialista;
@{
    ViewData["Title"] = "Details";
}

<h2>@ViewData["Title"]</h2>
<h3>Detalhes</h3>
<div>
    <h4>Especialista</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Nome):
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Cro):
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Cro)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.CroEstado):
        </dt>
        <dd>
            @Html.DisplayFor(model => model.CroEstado)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Departamento):
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Departamento.Nome)
        </dd>

    </dl>
    <a asp-action="Edit" class="btn btn-default" asp-route-id="@Model.Id">Editar</a>
    <a asp-action="Index" class="btn btn-default">Voltar</a>
</div>

