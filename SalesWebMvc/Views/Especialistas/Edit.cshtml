@model SalesWebMvc.Models.ViewModels.EspecialistaFormViewModel;

@{
    ViewData["Title"] = "Editar";
}

<h2>Adicionar um novo especialista</h2>

<h4>Editar</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div class="form-group">
                <input type="hidden" asp-for="Especialista.Id" />
                <label asp-for="Especialista.Nome" class="control-label"></label>
                <input asp-for="Especialista.Nome" class="form-control" />
                <span asp-validation-for="Especialista.Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Especialista.Cro" class="control-label"></label>
                <input asp-for="Especialista.Cro" class="form-control" />
                <span asp-validation-for="Especialista.Cro" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Especialista.CroEstado" class="control-label"></label>
                <input asp-for="Especialista.CroEstado" class="form-control" />
                <span asp-validation-for="Especialista.CroEstado" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Especialista.DepartamentoId" class="control-label"></label>
                <select asp-for="Especialista.DepartamentoId" asp-items="@(new SelectList(Model.Departamento,"Id","Nome"))" class="form-control">
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>
@section Scripts {
@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}