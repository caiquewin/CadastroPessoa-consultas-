@model SalesWebMvc.Models.Especialista

@{
    ViewData["Title"] = "Create";
}

<h2>Adicionar um novo especialista</h2>

<h4>Adicionar</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Cro" class="control-label"></label>
                <input asp-for="Cro" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="CroEstado" class="control-label"></label>
                <input asp-for="CroEstado" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Enviar" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>