@model IEnumerable<SalesWebMvc.Models.Especialista>
@{
    ViewData["Title"] = "Especialistas";
}

<h2>@ViewData["Title"]</h2>
<p>
    <a asp-action="Create" class="btn btn-default">Novo Especialista</a>
</p>
<table class="table table-striped table-hover">
    <thead>
        <tr class="info">
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cro)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CroEstado)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Departamento)
            </th>
            <th>
                Opções
            </th>
        </tr>
    </thead>
    <tbody >
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cro)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CroEstado)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Departamento.Nome)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Editar</a> |

                <a asp-action="Details" asp-route-id="@item.Id">Detalhes</a> |

                <a asp-action="Delete" asp-route-id="@item.Id">Excluir</a>
            </td>

        </tr>
        }
    </tbody>
</table>

